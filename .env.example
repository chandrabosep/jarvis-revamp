
# Copy this file to .env.local and fill in your values

# API Configuration
# Base URL for the Skynet agent API
NEXT_PUBLIC_API_BASE_URL=

# Storage API URL for file uploads and data storage
NEXT_PUBLIC_STORAGE_API_URL=

# SkyIntel API URL for blockchain data and analytics
NEXT_PUBLIC_SKYINTEL_API_URL=

# Web3Auth Configuration
# If this doesn't work, the app has a fallback client ID hardcoded
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=

# API Authentication
# API key for accessing Skynet services
NEXT_PUBLIC_X_API_KEY=

# ========================================
# Optional Configuration
